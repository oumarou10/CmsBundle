<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Bienvenue sur mon mini CMS !{% endblock %}</title>
        {% block stylesheets %}
            <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap-theme.min.css">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
    <div class="container">
            {% block menu %}
                <nav class="navbar navbar-default">
                    <div class="container-fluid">
                        <div class="navbar-header">
                            <a class="navbar-brand" href="#">CMS</a>
                        </div>
                        <div id="navbar" class="navbar-collapse collapse">
                            <ul class="nav navbar-nav">
                                <li class="active"><a href="{{ path('homepage') }}">Accueil</a></li>
                                <li><a href="{{ path('oc_cms_pages') }}">Liste des pages </a></li>
                                <li><a href="{{ path('oc_cms_create_page') }}">Ajouter une nouvelle page</a></li>
                            </ul>

                            {% if app.user  %}
                               <a class="pull-right btn btn-info account" href="{{ path('fos_user_security_logout') }}">Logout</a>
                            {% else %}
                               <a class="pull-right btn btn-info account" href="{{ path('fos_user_security_login') }}">Account</a>
                                <a class="pull-right btn btn-info account" href="{{ path('fos_user_registration_register') }}"> Sign in</a>
                            {% endif %}

                        </div><!--/.nav-collapse -->
                    </div><!--/.container-fluid -->
                </nav>

                {% for flash in app.session.flashbag.get('add_success') %}

                    <div class="alert alert-success">
                        {{ flash }}
                    </div>

                {% endfor %}

                {% for flash in app.session.flashbag.get('update_success') %}

                    <div class="alert alert-info">
                        {{ flash }}
                    </div>

                {% endfor %}


                {% for flash in app.session.flashbag.get('delete_success') %}

                    <div class="alert alert-danger">
                        {{ flash }}
                    </div>

                {% endfor %}

            {% endblock %}

        {% block body %}

        {% endblock %}
        {% block javascripts %}
            <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
            <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
        {% endblock %}
    </body>
</html>
